<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:itemBackground">#445245</item>

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:itemBackground">#445245</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary" >@android:color/white</item>
        <item name="android:itemBackground">#445245</item>
    </style>
    <style name="ThemeOverlay.mypopuoTheme" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:colorBackground"> #445245</item>
        <item name="android:textColor"> #000000</item>
        <item name="android:itemBackground">#445245</item>
    </style>

    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- if using android.widget.PopupMenu -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textColor"> #000000</item>
        <!-- if using android.support.v7.widget.PopupMenu -->
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">#FFF7EC</item>
        <item name="android:divider">#00FFFFFF</item>
        <item name="android:dividerHeight">15dp</item>
    </style>
</resources>
