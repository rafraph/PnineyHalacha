<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <LinearLayout
                android:id="@+id/lnrOption3"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#FFF7EC"
                android:gravity="center">

                <ImageView
                    android:id="@+id/to_main"
                    android:layout_width="170dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginLeft="110dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/pniney_header"
                    android:tag="4" />

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="69dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:paddingRight="36dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/action_config"
                    android:tag="4" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:scaleX="800"
                android:src="@drawable/toolbar_shaddow"
                android:tag="4" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <TextView
                android:paddingTop="10dp"
                android:layout_marginTop="50dp"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#FFF7EC"
                android:text="TextView"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView8"
                android:layout_marginTop="102dp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#FFF7EC"
                android:text="TextView"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />

            <TextView
                android:layout_marginTop="154dp"
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#FFF7EC"
                android:text="TextView"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />

            <TextView
                android:layout_marginTop="206dp"
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#FFF7EC"
                android:text="TextView"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />

            <TextView
                android:layout_marginTop="258dp"
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#FFF7EC"
                android:text="TextView"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/editTextQuery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/w_r_rec"
                android:gravity="start"
                android:hint="טקסט לחיפוש"
                android:inputType="textPersonName"
                android:paddingLeft="65dp"
                android:paddingTop="8dp"
                android:paddingRight="50dp"
                android:textAlignment="viewStart"
                android:imeOptions="actionSearch" />

            <ImageView
                android:id="@+id/goSearch"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/search" />

        </RelativeLayout>

            <ListView
                android:id="@+id/searchListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:divider="#000"
                android:textColor="#000"
                android:dividerHeight="2px"></ListView>

    </LinearLayout>

</RelativeLayout>