<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF7EC"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="103dp"
        android:background="#FFF7EC"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_x"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:srcCompat="@drawable/dialog_x" />

        <RadioGroup
            android:id="@+id/radios"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:inputType="text"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnrOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF7EC"
                android:gravity="center" />
        </RadioGroup>

        <TextView
            android:id="@+id/chooseTochen"
            android:layout_width="418dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="ברוכים הבאים לאפליקציית פניני הלכה"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pickBooks"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="בחרו את שפת הספרים המבוקשת להורדה למכשירכם:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lnrOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF7EC"
            android:gravity="center">

            <ImageView
                android:id="@+id/settings"
                android:layout_width="70dp"
                android:layout_height="126dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/en_b_3" />

            <ImageView
                android:id="@+id/too_py"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:tag="4"
                app:srcCompat="@drawable/h_b_4" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF7EC"
            android:gravity="center">

            <ImageView
                android:id="@+id/im_es_down"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/es_b_3" />

            <ImageView
                android:id="@+id/to_py"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/r_b_3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF7EC"
            android:gravity="center">

            <ImageView
                android:id="@+id/im_f_down"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/f_b_3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrOption5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF7EC"
            android:gravity="center">

            <ImageView
                android:id="@+id/dialog_x2"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/dialog_x" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>