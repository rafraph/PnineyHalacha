<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#F6EBCD"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F0F0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Choose Language / בחר שפה"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#00546c"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/radios"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:inputType="text"
            android:orientation="vertical" />

        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text=" OK " />

        <CheckBox
            android:id="@+id/checkBoxH"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:drawablePadding="52dp"
            android:text="עברית"
            android:textSize="25dp" />

        <CheckBox
            android:id="@+id/checkBoxEN"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="English"
            android:textSize="25dp" />

        <CheckBox
            android:id="@+id/checkBoxRU"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="русский"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/lnrOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FBFBFB"
            android:gravity="center">

            <ImageView
                android:id="@+id/im_f"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/f_b_1" />

            <ImageView
                android:id="@+id/im_es"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/es_b_1" />

            <ImageView
                android:id="@+id/im_r"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/r_b_1" />

            <ImageView
                android:id="@+id/im_en"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/en_b_1" />

            <ImageView
                android:id="@+id/im_h"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/h_b_1" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="שפת        האפליקציה"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>