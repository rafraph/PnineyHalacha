<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tooBooks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eed7d5">

    <LinearLayout
        android:id="@+id/lnrOption3"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#FFF7EC"
        android:gravity="center">

        <ImageView
            android:id="@+id/too_main"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/to_main"
            android:tag="4" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="69dp"
            android:layout_height="40dp"

            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:paddingRight="15dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/action_config"
            android:tag="4" />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="669dp"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/lnrOptions"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="#970606"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ibNextPage"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/NextPage"
            android:src="@drawable/ic_action_down" />

        <ImageButton
            android:id="@+id/ibPreviousPage"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/PreviousPage"
            android:src="@drawable/ic_action_up" />


        <ImageButton
            android:id="@+id/ibNext"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/Next"
            android:src="@drawable/ic_action_next_item" />

        <ImageButton
            android:id="@+id/ibPrevious"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/Previous"
            android:src="@drawable/ic_action_previous_item" />

        <ImageButton
            android:id="@+id/bSendEmail"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_action_switches_modes" />

        <ImageButton
            android:id="@+id/b_chap"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/Chapters"
            android:src="@drawable/ic_action_view_as_list" />

        <ImageButton
            android:id="@+id/auto_scrool"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/Chapters"
            android:src="@drawable/auto_scrool" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/lnrFindOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/ibFindNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#970606"
            android:contentDescription="@string/NextPage"
            android:src="@drawable/ic_action_down" />

        <ImageButton
            android:id="@+id/ibFindPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#970606"
            android:contentDescription="@string/PreviousPage"
            android:src="@drawable/ic_action_up" />
    </LinearLayout>

</RelativeLayout>
</LinearLayout>