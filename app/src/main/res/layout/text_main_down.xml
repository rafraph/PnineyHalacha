<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/textMainToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5EDE6"
        android:elevation="4dp">

        <!-- Include the custom toolbar layout -->
        <include
            android:id="@+id/text_main_toolbar"
            layout="@layout/text_main_toolbar" />

    </androidx.appcompat.widget.Toolbar>

    <WebView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/lnrOptions"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:background="#970606"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ibNextPage"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/NextPage"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_down" />

        <ImageButton
            android:id="@+id/ibPreviousPage"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/PreviousPage"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_up" />

        <ImageButton
            android:id="@+id/ibNext"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/Next"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_next_item" />

        <ImageButton
            android:id="@+id/ibPrevious"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/Previous"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_previous_item" />

        <ImageButton
            android:id="@+id/ibChapters"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/Chapters"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_view_as_list" />

        <ImageButton
            android:id="@+id/ibAutoScrool"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/Chapters"
            android:scaleType="fitCenter"
            android:src="@drawable/auto_scroll" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrFindOptions"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="#970606"
        android:layout_alignParentBottom="true"
        android:tag="gone"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/ibFindNext"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:contentDescription="@string/NextPage"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_down" />

        <ImageButton
            android:id="@+id/ibFindPrevious"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:contentDescription="@string/PreviousPage"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_up" />

    </LinearLayout>

</LinearLayout>