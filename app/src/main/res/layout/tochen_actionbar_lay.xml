<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#FFFFFFFF">

    <ImageButton
        android:id="@+id/ibFindNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="#970606"
        android:contentDescription="@string/NextPage"
        android:paddingLeft="30dp"
        android:paddingTop="60dp"
        android:src="@drawable/ic_action_up" />
    <ImageButton
    android:id="@+id/ibFindPrevious"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:background="#970606"
    android:contentDescription="@string/NextPage"
    android:paddingTop="60dp"
    android:src="@drawable/ic_action_down" />

    <LinearLayout
        android:id="@+id/lnrOption3"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#FFF7EC"
        android:gravity="center">

        <ImageView
            android:id="@+id/make_mark"
            android:layout_width="43dp"
            android:layout_height="40dp"

            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"

            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/make_bookmark"
            android:tag="4" />

        <ImageView
            android:id="@+id/page_search"
            android:layout_width="39dp"
            android:layout_height="40dp"

            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/page_search"
            android:tag="4" />

        <ImageView
            android:id="@+id/to_main"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/to_main"
            android:tag="4" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="69dp"
            android:layout_height="40dp"


            android:layout_marginLeft="30dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/action_config"
            android:tag="4" />
    </LinearLayout>
    <ImageView
        android:id="@+id/b_chap2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:scaleX="800"
        android:src="@drawable/head_shaddow"
        android:tag="4" />












</RelativeLayout>
