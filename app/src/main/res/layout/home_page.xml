<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePage">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <LinearLayout
                android:id="@+id/lnrOption3"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#FFF7EC"
                android:gravity="center">

                <ImageView
                    android:id="@+id/b_chap"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginLeft="110dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/to_main"
                    android:tag="4" />

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="69dp"
                    android:layout_height="40dp"

                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:paddingRight="15dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/action_config"
                    android:tag="4" />
            </LinearLayout>

            <ImageView
                android:id="@+id/b_chap2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:scaleX="800"
                android:src="@drawable/head_shaddow"
                android:tag="4" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lnrOption7"
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"

            android:background="#ffffff"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginRight="15dp"
                    android:text="חיפוש"
                    android:textColor="#970606"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/searchAll"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/ic_search_all" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="115dp"

                    android:text="לימוד יומי"
                    android:textColor="#970606"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/to_py"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/ic_too_py" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="115dp"
                    android:text="ספרים"
                    android:textColor="#970606"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/too_main"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_too_books" />


            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrOption2"
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="115dp"

                    android:text="על הסדרה"
                    android:textColor="#970606"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/about_p"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/ic_about_p" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="115dp"

                    android:text="מיקום אחרון"
                    android:textColor="#970606"
                    android:textSize="12dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/my_last_loc"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/ic_last_loc" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="115dp"
                    android:text="סימניות"
                    android:textColor="#970606"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/my_marks"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/ic_my_marks" />


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <LinearLayout
                android:id="@+id/lnrOption8"
                android:layout_width="match_parent"
                android:layout_height="289dp"
                android:background="#FFF7EC"
                android:gravity="center">

                <ImageView
                    android:id="@+id/donation"
                    android:layout_width="74dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="120dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/donation" />

                <ImageView
                    android:id="@+id/ask_the_rav"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:paddingBottom="100dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/ask_the_rav"
                    android:tag="4" />

                <ImageView
                    android:id="@+id/go_shop"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:paddingBottom="70dp"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:src="@drawable/go_shop" />

            </LinearLayout>

            <ImageView
                android:id="@+id/b_chap3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"

                android:scaleX="800"
                android:src="@drawable/head_shaddow"
                android:tag="4" />
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>