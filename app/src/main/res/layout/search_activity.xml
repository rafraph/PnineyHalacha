<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:id="@+id/main"
	android:layout_height="match_parent"
	android:background="#FFFFFF"
	android:orientation="vertical"
	android:paddingTop="0dp"
	tools:context=".Feedback">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="58dp">

		<LinearLayout
			android:id="@+id/lnrOption3"
			android:layout_width="match_parent"
			android:layout_height="52dp"
			android:background="#FFF7EC"
			android:gravity="center">

			<ImageView
				android:id="@+id/to_main"
				android:layout_width="170dp"
				android:layout_height="40dp"
				android:layout_marginStart="110dp"
				android:layout_marginLeft="110dp"
				android:scaleX="1"
				android:scaleY="1"
				android:src="@drawable/to_main"
				android:tag="4" />

			<ImageView
				android:id="@+id/menu"
				android:layout_width="69dp"
				android:layout_height="40dp"

				android:layout_marginStart="50dp"
				android:layout_marginLeft="50dp"
				android:paddingRight="15dp"
				android:scaleX="0.6"
				android:scaleY="0.6"
				android:src="@drawable/action_config"
				android:tag="4" />
		</LinearLayout>

		<ImageView
			android:id="@+id/b_chap2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="0dp"
			android:layout_marginLeft="0dp"
			android:layout_marginTop="50dp"
			android:scaleX="800"
			android:src="@drawable/head_shaddow"
			android:tag="4" />
	</RelativeLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp"
		android:textColor="#121010"
		android:textStyle="bold" />

	<LinearLayout
		android:id="@+id/lnrOptions"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp"
		android:background="#FFFFFF"
		android:gravity="center">

		<TextView
			android:id="@+id/last_search"
			android:layout_width="146dp"
			android:layout_height="30dp"
			android:background="@drawable/rec_r_half2_empty"
			android:gravity="center"
			android:inputType="textPersonName"

			android:text="חיפושים אחרונים"
			android:textColor="#970606"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/search_now"
			android:layout_width="126dp"
			android:layout_height="30dp"
			android:background="@drawable/rec_r_half_full"
			android:gravity="center"
			android:inputType="textPersonName"
			android:text="חיפוש"
			android:textColor="#FFFFFF"

			android:textStyle="bold" />
	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		<TextView
			android:paddingTop="10dp"
			android:layout_marginTop="50dp"
			android:id="@+id/textView7"
			android:layout_width="match_parent"
			android:layout_height="52dp"
			android:background="#FFF7EC"
			android:text="TextView"
			android:paddingLeft="50dp"
			android:paddingRight="50dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:visibility="gone" />

		<TextView
			android:id="@+id/textView8"
			android:layout_marginTop="102dp"
			android:layout_width="match_parent"
			android:layout_height="52dp"
			android:background="#FFF7EC"
			android:text="TextView"
			android:paddingLeft="50dp"
			android:paddingRight="50dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:visibility="gone" />

		<TextView
			android:layout_marginTop="154dp"
			android:id="@+id/textView9"
			android:layout_width="match_parent"
			android:layout_height="52dp"
			android:background="#FFF7EC"
			android:text="TextView"
			android:paddingLeft="50dp"
			android:paddingRight="50dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:visibility="gone" />

		<TextView
			android:layout_marginTop="206dp"
			android:id="@+id/textView10"
			android:layout_width="match_parent"
			android:layout_height="52dp"
			android:background="#FFF7EC"
			android:text="TextView"
			android:paddingLeft="50dp"
			android:paddingRight="50dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:visibility="gone" />

		<TextView
			android:layout_marginTop="258dp"
			android:id="@+id/textView11"
			android:layout_width="match_parent"
			android:layout_height="52dp"
			android:background="#FFF7EC"
			android:text="TextView"
			android:paddingLeft="50dp"
			android:paddingRight="50dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:visibility="gone"/>

		<EditText
			android:id="@+id/title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/w_r_rec"
			android:gravity="start"
			android:hint="טקסט לחיפוש"
			android:inputType="textPersonName"
			android:paddingLeft="65dp"
			android:paddingTop="8dp"
			android:paddingRight="50dp"

			android:textAlignment="viewStart" />

		<ImageView
			android:id="@+id/goSearch"
			android:layout_width="20dp"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"

			android:layout_marginStart="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp"


			android:layout_marginRight="24dp"
			android:src="@drawable/search" />


		<ImageView
			android:id="@+id/getVoice"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_marginStart="15dp"
			android:layout_marginLeft="24dp"


			android:layout_marginTop="10dp"

			android:layout_marginEnd="5dp"


			android:layout_marginRight="5dp"
			android:layout_marginBottom="5dp"
			android:scaleX="2"
			android:scaleY="2"
			android:src="@drawable/voice" />
	</RelativeLayout>




	<TextView
		android:id="@+id/no_found"
		android:layout_width="323dp"
		android:layout_height="wrap_content"

		android:text="לא נמצאו תוצאות"
		android:textSize="30dp"
		android:visibility="gone"/>
	<ListView
		android:id="@+id/list2"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginEnd="15dp"
		android:layout_marginRight="15dp"
		android:textAlignment="viewStart"
		android:divider="#FFF7EC"
		android:dividerHeight="2px"
		android:paddingRight="15dp"
		android:gravity="start"></ListView>
	<ListView
		android:id="@+id/list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginEnd="15dp"
		android:layout_marginRight="15dp"
		android:divider="#FFF7EC"
		android:dividerHeight="2px"
		>

	</ListView>



</LinearLayout>