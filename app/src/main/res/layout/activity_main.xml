<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/lnrOption3"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#FFF7EC"

        android:gravity="center">

        <ImageView
            android:id="@+id/b_chap"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/to_main"
            android:tag="4" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="69dp"
            android:layout_height="40dp"

            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:paddingRight="15dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/action_config"
            android:tag="4" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="52dp"

        android:background="#F5EDE6">

        <ExpandableListView
            android:id="@+id/lvExp"
            android:layout_width="409dp"
            android:layout_height="match_parent"


            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:background="#00131515"
            android:cacheColorHint="#DC0A0A"
            android:divider="#00FFFFFF"
            android:dividerHeight="2px"


            android:groupIndicator="@null"


            ></ExpandableListView>
    </RelativeLayout>

</RelativeLayout>